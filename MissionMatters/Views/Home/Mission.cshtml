@model IEnumerable<MissionMatters.Models.Question>

@{
    ViewBag.Title = "Mission";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href=@Url.Action("Index", "Home")>Home</a></li>
        <li class="breadcrumb-item"><a href=@Url.Action("Missions", "Home")>Missions</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewBag.Name</li>
    </ol>
</nav>

<div class="jumbotron">
    <h2>@ViewBag.name</h2>

    <p>The @ViewBag.name is at @ViewBag.address.</p>

    <p>The current Mission President is President @ViewBag.president.</p>

    <p>The mission language is @ViewBag.language.</p>

    <p>The climate is @ViewBag.climate.</p>

    <p>The dominant religion is @ViewBag.dominate.</p>

    <img src=@ViewBag.flag width="600" alt="Mission Flag" />

</div>

<p>FAQ: How many missions are there? 419 <br /> How many missionaries are there? 70,000 <br />Can I bring my phone on my mission? Maybe</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.QuestionText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Answer)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Answer)
            </td>
            <td>
                <button onclick="showForm()">Answer</button>
            </td>
        </tr>
        <tr>
            <td>
                <form style="display:none" id="form" action=@Url.Action(ViewBag.Name, "Home") method="get">
                    Answer:<br />
                    <input type="text" name="answer" value=""><br />
                    <input type="submit" value="Submit">
                </form>
            </td>
        </tr>
    }

</table>

<form action=@Url.Action(ViewBag.Name, "Home") method="get">
    Question:<br />
    <input type="text" name="question" value=""><br />
    <input type="submit" value="Submit">
</form>

<script>
    function showForm() {
        document.getElementById('form').style.display = 'block';
    }
</script>